{# weather-block.html.twig #}

<div class="weather-block">
  <p>Max Temperature: {{ temperatureMax }} C</p>
  <p>Min Temperature: {{ temperatureMin }} C</p>
  <p>Humidity: {{ humidity }}</p>
  <p>Snow: {{ snow }}</p>
  <p>Sunrise: {{ sunrise }}</p>
  <p>Sunset: {{ sunset }}</p>
  <p>Cloud Cover: {{ cloudcover }}</p>
</div>
